{% extends '@App/base.html.twig' %}

{% block title %}
    Pages list
{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>Pages list</h1>
            </div>

            <div id="list">
                {% for index, page in pages %}
                    <div>
                        <a href="{{ path('page', { id: index}) }}">
                            {{ page }}
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
